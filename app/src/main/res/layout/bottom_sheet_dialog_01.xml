<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:background="@drawable/background_dialog">
    
    <TextView
        android:id="@+id/tvChoose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Choose"
        android:textColor="@color/blackTxt"
        android:textSize="24dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:id="@+id/containerCreateTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_btn_07"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/icon_topic"
            android:drawablePadding="8dp"
            android:text="Topic"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerCreateFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_btn_07"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/icon_folder"
            android:drawablePadding="8dp"
            android:text="Folder"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            />
    </LinearLayout>
</LinearLayout>