<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list >
            <item >
                <shape android:shape="rectangle" >
                    <gradient android:startColor="#D3959B" android:endColor="#BFE6BA"/>
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:top="5dp" android:end="5dp" android:bottom="5dp" android:start="5dp">
                <shape android:shape="rectangle" >
                    <solid android:color="#ffdd59"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>