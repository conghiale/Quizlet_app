<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" >
        <layer-list >
            <item >
                <shape android:shape="rectangle" >
                    <solid android:color="#808e9b" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item android:top="3dp" android:end="3dp" android:bottom="3dp" android:start="3dp">
                <shape android:shape="rectangle" >
                    <solid android:color="@color/white"/>
                    <corners android:topLeftRadius="10dp" android:topRightRadius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true" >
        <layer-list >
            <item >
                <shape android:shape="rectangle" >
                    <gradient android:startColor="#56CCF2" android:endColor="#2F80ED"/>
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item android:top="5dp" android:end="5dp" android:bottom="5dp" android:start="5dp">
                <shape android:shape="rectangle" >
                    <solid android:color="#f7f1e3"/>
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>