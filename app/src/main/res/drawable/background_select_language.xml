<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/card_view"/>
        </shape>
    </item>

    <item android:state_focused="true" >
        <layer-list >
            <item >
                <shape android:shape="rectangle" >
                    <gradient android:startColor="#12c2e9" android:centerColor="#c471ed" android:endColor="#f64f59"/>
                </shape>
            </item>
            <item android:top="1dp" android:end="1dp" android:bottom="1dp" android:start="1dp">
                <shape android:shape="rectangle" >
                    <solid android:color="@color/card_view"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>